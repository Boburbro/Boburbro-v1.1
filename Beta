import logging
import wikipedia
from aiogram import Bot, Dispatcher, executor, types

wikipedia.set_lang('UZ')
API_TOKEN = '5784801253:AAFQ-68q9CrPb-EiwVfwcfUPYRrGr_b5gqU'

# Configure logging
logging.basicConfig(level=logging.INFO)

# Initialize bot and dispatcher
bot = Bot(token=API_TOKEN)
dp = Dispatcher(bot)


@dp.message_handler(commands=['start', 'help'])
async def send_welcome(message: types.Message):
    """
    This handler will be called when user sends `/start` or `/help` command
  """
    await message.reply("Assalomu alaykim!\nMen Vikipedia botman!\nYozining men topib beraman.")



@dp.message_handler()
async def wiki(message: types.Message):
    try:
    	respond = wikipedia.summary(message.text)
    	await message.answer(respond)
    except:
    	await message.answer('Hech qanday mlumot topimadi\nMenimcha imloviy xato qildinggizü§î')
    await message.answer('Foydalanganingiz uchun raxmat!\nKanalga obuna bo\'lib oling: @Boburbro_tg\nBosh adminüë®‚Äçüíª: @B0987_bot')
    


if __name__ == '__main__':
    executor.start_polling(dp, skip_updates=True)
